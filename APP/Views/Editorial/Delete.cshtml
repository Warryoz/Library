@model models.Editorial
<div class="row">
    <div class=" col-md-offset-4 col-md-8">
        <h3 class="text-danger">Zona de eliminación de editoriales</h3>
        <h4>¿Esta seguro que desea eliminar este editorial?</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Nombre</dt>
            <dd>
                @Html.DisplayFor(model => model.NombreEditorial)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar permanentemente" class="btn btn-danger" /> 
                @Html.ActionLink("Volver", "List", null, new { @class = "btn btn-success" })
            </div>
        }
    </div>
</div>
