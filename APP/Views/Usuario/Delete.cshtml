@model models.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Eliminar Usuario";
}
<div class="row">
    <div class=" col-md-offset-4 col-md-8">
        <h3 class="text-danger">Zona de eliminación de usuarios</h3>
        <h4>¿Esta seguro que desea eliminar este usuario?</h4>
        <dl class="dl-horizontal">
            <dt class="text-center">Nombres </dt>
            <dd>@Html.DisplayFor(model => model.Nombres)</dd>


            <dt>Apellidos</dt>
            <dd>@Html.DisplayFor(model => model.Apellidos)</dd>


            <dt>Tipo identificación</dt>
            <dd>@Html.DisplayFor(model => model.TipoIdentificacion)</dd>


            <dt>Identificación</dt>
            <dd>@Html.DisplayFor(model => model.NumeroIdentificacion)</dd>


            <dt> Correo Electrónico</dt>
            <dd> @Html.DisplayFor(model => model.CorreoElectronico)</dd>


            <dt> Fecha nacimiento</dt>
            <dd>@Html.DisplayFor(model => model.FechaNacimiento)</dd>


            <dt>Dirección</dt>
            <dd> @Html.DisplayFor(model => model.Direccion)</dd>


            <dt>Teléfono</dt>
            <dd> @Html.DisplayFor(model => model.Telefono)</dd>


            <dt>País de origen</dt>
            <dd>@Html.DisplayFor(model => model.PaisOrigen)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
                <input type="submit" value="Eliminar permanentemente" class="btn btn-danger" />
                @Html.ActionLink("Volver", "List", null, new { @class = "btn btn-success" })
        }
    </div>
</div>

