@model models.Autor


@{
    ViewBag.Title = "Eliminar Autor";
}

<div class="row">
    <div class=" col-md-offset-4 col-md-8">
        <h3 class="text-danger">Zona de eliminación de autores</h3>
        <h4>¿Esta seguro que desea eliminar este autor?</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Nombre
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NombreAutor)
            </dd>

            <dt>
                Fecha nacimiento
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FechaNacimiento)
            </dd>

            <dt>
                Pais origen
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PaisOrigen)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar permamentemente" class="btn btn-danger" /> 
                @Html.ActionLink("Volver", "List", null, new { @class="btn btn-success" })
            </div>
        }
    </div>
</div>
