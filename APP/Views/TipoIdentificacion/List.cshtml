@model IEnumerable<models.TipoIdentificacion>

<h3 class="text-center text-info">Tipos de identificación</h3>
<div class="table-responsive">
    <p>
        @Html.ActionLink("Crear Tipo identificación", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead class="thead-light">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.IdTipoIdentificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreTipoIdentificacion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdTipoIdentificacion }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdTipoIdentificacion }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>